{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"final_space":false,
  	"osc99":true,
	"console_title": true,
	"console_title_style": "template",
	"console_title_template": "{{if .Root}} ‚ö° {{end}} Terminal ‚ûî üìÅ{{.Folder}}",
	"blocks":[
	{
	  "type":"prompt",
	  "alignment": "left",
	  "segments": [
        {
          "type": "os",
          "style": "diamond",
		  "leading_diamond": "<transparent,background>‚ï≠‚îÄÓÇ∂</>",
          "foreground": "#d3d7cf",
          "background": "",
          "properties": {
            "prefix": " "
          }
        },
	  	{
          "type": "session",
          "style": "diamond",
          "foreground": "skyblue",
          "background": "",
          "properties": {
            "prefix": "",
            "postfix": "",
            "display_host": true,
            "template": "{{ .HostName }} \u27a4 J "
          }
        },
		{
		  "type":"root",
		  "style": "diamond",
          "trailing_diamond": "",
		  "foreground": "#fffb38",
		  "background": "#0077c2",
		  "properties": {
		    "root icon": "",
		    "prefix": "<parentBackground>\ue0b0</>"
		  }
		},
		{
		  "type":"path",
		  "style": "diamond",
		  "powerline_symbol": "\ue0b0",
		  "leading_diamond": "<transparent,background>\ue0b0</>",
		  "trailing_diamond": "\ue0b0","foreground": "#e4e4e4",
		  "background": "#3465a4",
		  "foreground": "#f2f2f2",
		  "properties":{
		    "style": "full",
            "home_icon": "\uF7DB",
		    "enable_hyperlink": true 
		  }
		},
		{
          "type":"git",
		  "style": "powerline",
		  "powerline_symbol": "\ue0b0",
		  "foreground": "#011627",
		  "background": "#fffb38",
		  "background_templates": [
		    "{{if or (.Working.Changed) (.Staging.Changed) }}#ffeb95{{ end }}",
		    "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#c53478{{ end }}",
		    "{{ if gt .Ahead 0 }}#c792ea{{ end }}",
		    "{{ if gt .Behind 0 }}#c792ea{{ end }}"
		  ],
		  "properties":{
		     "branch_icon": "\ue725 ",
		     "fetch_status": true,
		     "fetch_upstream_icon": true,
		     "template":"{{ .HEAD }} {{ if .Working.Changed }}{{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }}|{{ end }}{{ if .Staging.Changed }}<#ef5350> \uf046 {{ .Staging.String }}</>{{ end }}"
	
		  }

		}
	      ]
	   },
	   {
	     "type": "prompt",
	     "alignment": "right",
	     "segments":[
	      {
	        "type": "node",
		"style": "diamond",
		"leading_diamond": " \ue0b6",
		"trailing_diamond": " \ue0b4",
		"foreground": "#3c873a",
		"background": "#303030",
		"properties": {
		  "prefix": "\ue718",
		  "postfix": "",
		  "display_package_manager": true,
		  "yarn_icon": " <#348cba>Ôòö</>",
                  "npm_icon": " <#cc3a3a>Óó∫</> "
          }
        },
        {
          "type": "time",
          "style": "diamond",
          "invert_powerline": true,
          "leading_diamond": "\uE0B2",
          "trailing_diamond": "",
          "background": "#049850",
          "foreground": "#000000",
          "properties": {
            "prefix": " \uf5ef ",
            "postfix": " ",
            "time_format": "15:04"
        	}
    	},
        {
          "type": "battery",
          "style": "diamond",
          "invert_powerline": true,
          "leading_diamond": "",
          "trailing_diamond": "<transparent,background></>",
          "foreground": "#262626",
          "background": "",
          "foreground_templates": [
            "{{if eq \"Charging\" .State.String}}#b8e994{{end}}",
            "{{if eq \"Discharging\" .State.String}}#fff34e{{end}}",
            "{{if eq \"Full\" .State.String}}#33DD2D{{end}}"
          ],
          "properties": {
            "discharging_icon": "Óà¥ ",
            "charging_icon": "\uf1e6 ",
            "charged_icon": "\uf58e ",
            "postfix": "Ôäï <#262626></>"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#21c7c7",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": " ‚ï∞‚îÄ"
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#e0f8ff",
          "properties": {
            "prefix": "\u276F",
            "display_exit_code": false,
            "always_enabled": true,
            "error_color": "#ef5350"
          }
        },
        {
          "type": "python",
          "style": "diamond",
          "leading_diamond": " \uE0B6",
          "trailing_diamond": "\uE0B4",
          "foreground": "#FFE873",
          "background": "#306998",
          "properties": {
            "prefix": "\uE235 ",
            "postfix": ""
          }
        }
      ]
    }
  ]
}
